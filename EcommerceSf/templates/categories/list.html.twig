{% extends 'base.html.twig' %}

{% block title %}Liste des produits de la catégorie
	{{ categories.name }}
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row justify-content-center">
			<div class="col-12 text-center">
				<h1>Liste des produits de la catégorie
					{{ categories.name }}</h1>
			</div>
		</section>

		<section class="row justify-content-center">
			<div class="col-9">
				<div class="row">
					{% for product in products.data %}
						<div class="col-4 mb-3">
							<article class="card h-100">
								<div class="card-body">
									<h2 class="card-title text-center">{{ product.name }}</h2>
									<p class="card-text">{{ product.description }}</p>
									<div class="text-center">
										<a href="{{ path('products_details', {"slug": product.slug} )}}" class="btn btn-primary btn-block">Voir les détails</a>
									</div>
								</div>
							</article>
						</div>
					{% endfor %}
				</div>
			</div>
		</section>

		<section class="row justify-content-center mt-3">
			<div class="col-6 text-center mx-auto">
				{% set path = 'categories_list' %}
				{% set slug = categories.slug %}
				{% set pages = products.pages %}
				{% set currentPage = products.page %}
				{% set limit = products.limit %}
				{% include "partials/pagination.html.twig" %}
			</div>
		</section>
	</main>
{% endblock %}
